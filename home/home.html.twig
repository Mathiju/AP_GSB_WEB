    <!-- Importation du fichier Firebase -->
   <script type="module">
    // Importer Firebase et Firestore
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js";
    import { getFirestore, collection, getDocs } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js";

    // Configuration Firebase
    const firebaseConfig = {
        apiKey: "AIzaSyB24J4yHKRpk59CG-mnLUzJzizIuSo64-Q",
        authDomain: "ap-gsp.firebaseapp.com",
        projectId: "ap-gsp",
        storageBucket: "ap-gsp.firebasestorage.app",
        messagingSenderId: "817436331010",
        appId: "1:817436331010:web:b4f49704fd32d367bf6b1b"
    };

    // Initialiser Firebase
    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    // Fonction pour récupérer et afficher les frais depuis Firestore
    async function afficherFrais() {
        const fraisCollection = collection(db, "frais"); // Récupérer la collection "frais"
        const fraisSnapshot = await getDocs(fraisCollection); // Récupérer les documents
        const tableBody = document.getElementById("fraisTableBody");

        tableBody.innerHTML = ""; // Vider le tableau avant d'ajouter les nouvelles données

        fraisSnapshot.forEach((doc) => {
            const data = doc.data();
            const row = `
                <tr>
                    <td>${data.date}</td>
                    <td>${data.type_frais}</td>
                    <td>${data.valeur}€</td>
                </tr>
            `;
            tableBody.innerHTML += row;
        });
    }

    // Charger les frais au chargement de la page
    window.onload = afficherFrais;
</script>

